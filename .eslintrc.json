{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    ".nuxt/",
    ".output/",
    "web/**/*.vue",
    "web/**/*.ts",
    "**/*.vue",
    "**/*.d.ts"
  ]
}
