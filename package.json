{
  "name": "cc-leaderboard",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "cli",
    "web"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=web",
    "dev:cli": "npm run dev --workspace=cli",
    "build:web": "npm run build --workspace=web",
    "build:cli": "npm run build --workspace=cli",
    "build": "npm run build:web && npm run build:cli",
    "lint": "eslint . --ext .js,.ts,.vue",
    "lint:fix": "eslint . --ext .js,.ts,.vue --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,vue,json,md}\"",
    "typecheck": "npm run typecheck --workspace=web",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook setup'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4"
  }
}
